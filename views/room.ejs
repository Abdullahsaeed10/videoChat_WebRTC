<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script>
      const ROOM_ID = "<%= roomId %>";

    </script>
    <script defer src="https://unpkg.com/peerjs@1.4.7/dist/peerjs.min.js"></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="script.js" defer></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>

    <title>CONNECT</title>
    <link rel="stylesheet" href="style.css" />

</head>
<body>
  <div class="header">
    <div class="logo">
      
      <span id="displayroomId" style="color:white ;"></span>        
        
    </div>
  </div>  
  <div class="main">  
  <div class="main__left">
    <div class="videos__group">
      <div id="video-grid">

      </div>
    </div>
    <div class="options">
      <div class="options__left">
     
        <div id="stopVideo" class="options__button">
          <i class="fa fa-video-camera"></i>
        </div>
        <div id="muteButton" class="options__button">
          <i class="fa fa-microphone"></i>
        </div>
        <!-- TODO: not done yet -->
        <div id="shareScreen" class="pressed_button">
          <i class="fa fa-desktop	"></i>  
        </div>
        <div id="record" class="options__button">
          <i class="fa fa-circle"></i>  
        </div>
        <div id="chatbutton" class="pressed_button">
          <i class="fas fa-comment-dots"></i>
        </div>
     
      </div>
      <div class="options__right">
        <div id="inviteButton" class="pressed_button">
          <i class="fas fa-user-plus"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="main__right">
    <div class="main__chat_window">
      
      
        <div class="messages">

        </div>
    </div>
    <div class="main__message_container">
      <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
      <div id="send" class="options__button">
        <i class="fa fa-plus" aria-hidden="true"></i>
      </div>
    </div>
  </div>
</div>
</body>
<!-- <script src="script.js"></script> -->
</html>